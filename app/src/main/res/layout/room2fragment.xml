<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
>


    <TextView
            android:text="Light"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/light_room2"
            android:textSize="30dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView"
            android:background="#f2f4f7"
            android:paddingLeft="25dp"

            android:layout_marginBottom="3dp"
            android:gravity="center_vertical"/>

    <TextView
            android:text="Fan"
            android:layout_width="match_parent"
            android:textSize="30dp"
            android:gravity="center_vertical"
            android:layout_height="100dp"
            android:id="@+id/fan_room2"
            android:background="#f2f4f7"
            android:paddingLeft="25dp"

            android:layout_alignParentStart="true"
            android:layout_below="@+id/light_room2"
            android:layout_marginTop="-3dp"/>
    <TextView
            android:text="ON"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:textSize="30dp"
            android:textColor="#00ff00"
            android:id="@+id/r2light_on"
            android:visibility="invisible"
            android:layout_alignStart="@+id/r2fan_on"
            android:layout_alignBaseline="@+id/light_room2"/>
    <TextView
            android:text="OFF"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:textSize="30dp"
            android:textColor="#ff0000"
            android:id="@+id/r2light_off"
            android:layout_alignStart="@+id/r2light_on" android:layout_alignBaseline="@+id/light_room2"/>
    <TextView
            android:text="ON"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:textSize="30dp"
            android:textColor="#00ff00"
            android:id="@+id/r2fan_on"
            android:visibility="invisible"
            android:layout_alignTop="@+id/r2fan_off" android:layout_alignStart="@+id/r2fan_off"/>
    <TextView
            android:text="OFF"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:textSize="30dp"
            android:textColor="#ff0000"
            android:id="@+id/r2fan_off"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="42dp"
            android:layout_alignParentTop="true" android:layout_marginTop="140dp"/>

</RelativeLayout>